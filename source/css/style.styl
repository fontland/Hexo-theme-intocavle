@import "nib"

// Colors
color-red = #a00
color-font = #333
color-gray = #a0a0a0
catnav-bg = rgba(39,39,39,.7)
mainnav-bg-default = #cc002e
mainnav-bg-pink = rgba(220,0,45,.7)
mainnav-bg-none = rgba(0,0,0,.3)

global-reset()
a
  text-decoration none
a:link, a:visited, a:hover, a:active, a:focus
  outline none
  color color-font

/* BASIC STYLES*/
body
  background color-font

#sticker
  position fixed
  color color-gray
  font bold 14px/20px "Times New Roman",Serif,sans-serif
  padding 0 4px
  left 34%
  bottom 20px
  background color-red
  border 1px solid color-gray

#sticker:hover
  border-color white
  color white

#container
  margin 10px auto
  width 100%
  position relative
  background white
  overflow hidden

#main-nav
  position absolute
  left 15px
  top 15px
  a
    color color-gray
    font-size 14px
  a:hover
    color color-font

.sidepanel
  position absolute
  right 64%
  left 15px
  top 15px

.mainpanel
  width 63%
  min-height 600px
  position relative
  margin-left 37%
  overflow hidden

  .main-wrap
    padding 15px 15px 50px

  #coverimg
    width 100%
    margin-bottom -4px

  .category-list
    position absolute
    top 0
    bottom 0
    left 0
    right 0

    li
      display block
      width 50%
      height 25%
      float left
      opacity 0
      background mainnav-bg-none
      transform(rotateY(180deg))
      transition(all, .8s, ease-in-out)

      a
        display block
        width 100%
        height 100%
        color white
        text-indent 1em
        font 48px/2 SimSun
    
    li:hover
      opacity 1
      background mainnav-bg-default
      background mainnav-bg-pink
      transform(rotateY(0deg))

/* BASIC STYLES*/

/* CATEGORY */
.category-nav
  text-align right

  h1
    margin-bottom 40px
    font 80px SimSun
  #archive-caption
    font-size 16px
    line-height 40px
  nav 
    .postname
      display inline-block
      position relative
      margin-left 5px
      width 80px
      height 80px
      overflow hidden

      img
        max-width 140px 
      a
        position absolute
        display block
        top 0
        left 0
        text-align left
        padding 5px
        width 70px
        height 70px
        color white
        font 14px SimSun
        background catnav-bg             
      a:hover
        background none

/* CATEGORY */

/* ARTICLE */
.mainpanel
  article
    .article-meta
      text-align right
      time
        color color-gray
        font-size 12px
        font-style italic
    .article-inner 
      header h1
        font-size 18px
      .article-entry
        margin 40px 0
        line-height 2
        h1,h2,h3,h4,h5,h6
          font-weight bold
          line-height 2
          margin 1em 0
        p
          img
            display block
      footer
        .article-tag-list
          li
            display inline-block
            margin-right 5px
            a
              font-size 14px
              font-style italic
              color color-gray
            a:hover
              color color-font
    nav
      margin-top 20px
      a
        display block
        font-size 14px
        line-height 2
      a:hover
        color color-red
/* ARTICLE */

/* ARCHIVE */
  .archives-wrap
    margin-bottom 20px

    .archive-year-wrap
      a
        font italic 20px/2 SimSun
        color color-red
    .archives
      a
        font-size 14px
        line-height 2
      a:hover
        color color-red
/* ARCHIVE */

/* PAGINATION */
#page-nav
  margin-top 50px
  .page-number
  .extend
    font-style italic
    font-size 14px
    color color-gray
    margin-right 10px
  .current
  a:hover
    color color-red
/* PAGINATION */

